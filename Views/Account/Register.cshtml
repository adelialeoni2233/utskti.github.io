@model SampleSecureWeb.ViewModels.RegistrationViewModel

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                Registration
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <!-- Username Field -->
                    <div class="form-group mb-2">
                        <input asp-for="Username" class="form-control form-control-user" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <!-- Email Field -->
                    <div class="form-group mb-2">
                        <input asp-for="Email" type="email" class="form-control form-control-user" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field with Strength Indicator -->
                    <div class="form-group mb-2">
                        <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Password" id="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span id="passwordError" class="text-danger"></span>
                        <span id="passwordStrength" class="text-info"></span>
                    </div>
                    
                    <!-- Show/Hide Password Checkbox -->
                    <div class="form-group form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="showPassword" />
                        <label class="form-check-label" for="showPassword">Show Password</label>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-group mb-2">
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user" placeholder="Confirm Password" id="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="form-group mb-2">
                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var passwordInput = document.getElementById('Password');
        var confirmPasswordInput = document.getElementById('ConfirmPassword');
        var passwordError = document.getElementById('passwordError');
        var passwordStrength = document.getElementById('passwordStrength');
        var showPasswordCheckbox = document.getElementById('showPassword');
        
        // Toggle Password Visibility
        showPasswordCheckbox.addEventListener('change', function () {
            var type = showPasswordCheckbox.checked ? 'text' : 'password';
            passwordInput.type = type;
        });
        
        // Password Strength Checker
        passwordInput.addEventListener('input', function () {
            var password = passwordInput.value;
            var error = '';
            var strengthText = '';
            var strengthColor = '';

            confirmPasswordInput.disabled = true;

            if (password.length < 12) {
                error = 'Password must be at least 12 characters long.';
                strengthText = 'Weak';
                strengthColor = 'red';
            }
            else if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*\d)/.test(password)) {
                error = 'Password must contain at least one lowercase letter, one uppercase letter, and one number.';
                strengthText = "Medium";
                strengthColor = 'orange';
            }
            else {
                error = '';
                confirmPasswordInput.disabled = false;

                if (/[^a-zA-Z0-9]/.test(password)) {
                    strengthText = 'Very Strong';
                    strengthColor = 'green';
                } else {
                    strengthText = 'Strong';
                    strengthColor = 'blue';
                }
            }

            passwordError.textContent = error;
            passwordStrength.textContent = `Password Strength: ${strengthText}`;
            passwordStrength.style.cssText = `color: ${strengthColor} !important; font-weight: bold;`;
        });
    </script>
    
    <!-- Validation Scripts -->
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
