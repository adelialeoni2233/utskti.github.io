@model SampleSecureWeb.ViewModels.ChangePasswordViewModel

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                Change Password
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Current Password Field with Eye Icon -->
                    <div class="form-group mb-2 position-relative">
                        <label for="CurrentPassword">Current Password</label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Current Password" id="CurrentPassword" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        <span class="position-absolute" style="right: 10px; top: 35px; cursor: pointer;" onclick="togglePassword('CurrentPassword', this)">
                            <i class="bi bi-eye" id="eyeIconCurrent"></i>
                        </span>
                    </div>

                    <!-- New Password Field with Eye Icon -->
                    <div class="form-group mb-2 position-relative">
                        <label for="NewPassword">New Password</label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" id="NewPassword" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <span class="position-absolute" style="right: 10px; top: 35px; cursor: pointer;" onclick="togglePassword('NewPassword', this)">
                            <i class="bi bi-eye" id="eyeIconNew"></i>
                        </span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="form-group mb-2">
                        <label for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2">
                        <input type="submit" class="btn btn-primary" value="Change Password" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword(inputId, icon) {
            var passwordField = document.getElementById(inputId);
            var iconElement = icon.querySelector("i");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                iconElement.classList.remove("bi-eye");
                iconElement.classList.add("bi-eye-slash");
            } else {
                passwordField.type = "password";
                iconElement.classList.remove("bi-eye-slash");
                iconElement.classList.add("bi-eye");
            }
        }
    </script>
    <!-- Include Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
}
